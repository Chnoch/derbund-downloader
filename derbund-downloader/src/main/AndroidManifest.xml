<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.notizklotz.derbunddownloader"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:icon="@drawable/ic_launcher">
        <activity
            android:name="com.github.notizklotz.derbunddownloader.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/einstellungen" />

        <receiver
            android:name=".AutomaticIssueDownloadAlarmReceiver"
            android:exported="false" />
        <receiver
            android:name=".AutomaticIssueDownloadCompletedReceiver"
            android:exported="false" />

        <service
            android:name=".IssueDownloadService"
            android:exported="false" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.github.notizklotz.derbunddownloader.publicissues"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>
    </application>

</manifest>
